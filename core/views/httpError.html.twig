{% set title = "Oups!"|_ %}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid small">
        <div class="row vh-100 gap-3">
            <div class="col-12 text-center align-self-end">
                <p class="display-1 text-black-50 fw-bold my-0">
                    {{ code }}
                </p>
                <p class="small text-muted my-0">
                    {{ message }}
                </p>
            </div>
            <div class="col-12 text-center align-self-start">
                <p class="display-6 my-0 text-danger">
                    {{ info }}
                </p>
            </div>
            <div class="col-12 text-center align-self-start">
                <img class="icon-errors" src="./images/{{ code }}.gif" alt="{{ code }}">
            </div>
            <div class="col-12 text-nowrap text-center align-self-start">
                <div class="d-flex flex-row justify-content-evenly">
                    <a href="{{ route('home') }}" class="btn btn-outline-secondary">{{ "retourner Ã  l'accueil"|_ }}</a>
                    {% if code == 401 or code == 403 %}
                    <a href="{{ route('login') }}" class="btn btn-outline-secondary ms-3">{{ "me connecter"|_ }}</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock body %}