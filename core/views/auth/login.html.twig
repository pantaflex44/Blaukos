{% set title = "Connexion"|_ %}
{% extends 'base.html.twig' %}

{% block body %}
    {% include 'header.html.twig' %}

    <main class="container-fluid py-5 small">
        <div class="card mx-auto" style="width: 90%; max-width: 25rem;">
            <div class="card-header">
                <div class="d-flex flex-row gap-2">
                    <img src="/images/logo24.png" width="24" height="24">
                    {{ "Connexion"|_ }}
                </div>
            </div>
            <div class="card-body mx-sm-4 my-3">
                <form method="{{ formMethod }}" action="{{ action }}">
                    {{ csrfField|raw }}

                    <label for="username" class="form-label">Nom d'utilisateur</label>
                    <input type="text" class="form-control form-control-sm mb-3" id="username" name="username" placeholder=" " autocomplete="off">

                    <label for="password" class="form-label">Mot de passe</label>
                    <div class="input-group input-group-sm flex-nowrap mb-1">
                        <input type="password" class="form-control" id="password" name="password" placeholder=" " aria-label="{{ "Mot de passe"|_ }}" aria-describedby="passwordView" autocomplete="off">
                        <span class="input-group-text text-muted" style="cursor: pointer;" id="passwordView" title="{{ "Voir le mot de passe"|_ }}" onmousedown="document.getElementById('password').setAttribute('type', 'text');" onmouseup="document.getElementById('password').setAttribute('type', 'password');">
                            <i class="fad fa-eye"></i>
                        </span>
                    </div>
                </form>
            </div>
            <div class="card-footer py-3">
                <div class="d-flex flex-row gap-2 justify-content-between">
                    <a class="btn btn-sm btn-outline-secondary" href="{{ route('home') }}" role="button">{{ "retour"|_ }}</a>
                    <a class="btn btn-sm btn-success" onclick="document.forms[0].submit();">{{ "connexion"|_ }}</a>
                </div>
            </div>
        </div>
    </main>

    {% include 'footer.html.twig' %}
{% endblock body %}