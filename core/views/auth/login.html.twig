{% set title = "Connexion"|_ %}
{% extends 'base.html.twig' %}

{% block scripts %}
{% if env('APP_AUTH_USE_JS', true) %}
<script type="text/javascript">
    const alertMessages = {
        '*' : "{{ "Une erreur est survenue. Veuillez réessayer ultérieurement."|_ }}",
        '400' : "{{ "Procédure de connexion incorrecte."|_ }}",
        '401' : "{{ "Identifiants incorrects."|_ }}",
        '403' : "{{ "Connexion à votre espace, refusée."|_ }}",
        '404' : "{{ "Ho Ho, page introuvable!"|_ }}",
        '500' : "{{ "Une erreur est survenue. Veuillez réessayer ultérieurement."|_ }}",
    }
</script>
<script type="text/javascript" src="/scripts/auth/login.js"></script>
{% endif %}
{% endblock %}

{% block body %}
    {% include 'header.html.twig' %}

    <main class="container-fluid py-5 small">

        <div class="mx-auto" style="width: 100%; max-width: 25rem;">
            <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <button class="nav-link active" id="nav-connection-tab" data-bs-toggle="tab" data-bs-target="#nav-connection" type="button" role="tab" aria-controls="nav-connection" aria-selected="true"><i class="fas fa-key me-2 d-none d-sm-inline-block"></i>{{ "Connexion"|_ }}</button>
                    <button class="nav-link" id="nav-passwordlost-tab" data-bs-toggle="tab" data-bs-target="#nav-passwordlost" type="button" role="tab" aria-controls="nav-passwordlost" aria-selected="false"><i class="fas fa-search me-2 d-none d-sm-inline-block"></i>{{ "Mot de passe oublié"|_ }}</button>
                </div>
            </nav>
            <div class="tab-content" id="nav-tabContent">
                
                <div class="tab-pane border-start border-bottom border-end p-3 show active" id="nav-connection" role="tabpanel" aria-labelledby="nav-connection-tab">

                    <form id="form_login" method="{{ formMethod }}" action="{{ action }}">
                        {{ csrfField|raw }}

                        <label for="username" class="form-label">Nom d'utilisateur</label>
                        <input type="text" class="form-control form-control-sm mb-3" id="username" name="username" placeholder=" " autocomplete="off" required>

                        <label for="password" class="form-label">Mot de passe</label>
                        <div class="input-group input-group-sm flex-nowrap mb-1">
                            <input type="password" class="form-control" id="password" name="password" placeholder=" " aria-label="{{ "Mot de passe"|_ }}" aria-describedby="passwordView" autocomplete="off" required>
                            <span class="input-group-text text-muted" style="cursor: pointer;" id="passwordView" title="{{ "Voir le mot de passe"|_ }}" onmousedown="document.getElementById('password').setAttribute('type', 'text');" onmouseup="document.getElementById('password').setAttribute('type', 'password');">
                                <i class="fas fa-eye"></i>
                            </span>
                        </div>

                        {% if env('APP_AUTH_USE_JS', true) %}
                        <div id="alert" class="alert alert-danger d-none mt-4" role="alert"></div>
                        {% endif %}

                        <div class="d-flex flex-row gap-2 justify-content-between align-items-center mt-4">
                            <a class="btn btn-sm btn-outline-secondary" href="{{ route('home') }}" role="button">{{ "retour"|_ }}</a>
                            <span id="form_spinner" class="spinner-border spinner-border-sm text-secondary me-3 d-none" role="status" aria-hidden="true"></span>
                            <input id="form_submit" type="submit" class="btn btn-sm btn-success" role="submit" value="{{ "connexion"|_ }}">
                        </div>
                    </form>

                </div>

                <div class="tab-pane border-start border-bottom border-end p-3" id="nav-passwordlost" role="tabpanel" aria-labelledby="nav-passwordlost-tab">lp</div>

            </div>
        </div>

    </main>

    {% include 'footer.html.twig' %}
{% endblock body %}