{% set title = "Connexion"|_ %}
{% extends 'base.html.twig' %}

{% block body %}
    {% include 'header.html.twig' %}

    <main class="container-fluid py-5 small">

        <div class="mx-auto" style="width: 100%; max-width: 25rem;">
            <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <button class="nav-link active" id="nav-passwordlost-tab" data-bs-toggle="tab" data-bs-target="#nav-passwordlost" type="button" role="tab" aria-controls="nav-passwordlost" aria-selected="false"><i class="fas fa-search me-2 d-none d-sm-inline-block"></i>{{ "Mot de passe oublié"|_ }}</button>
                </div>
            </nav>
            <div class="tab-content" id="nav-tabContent">

                {% if error is defined %}
                    {% set color = 'text-danger' %}
                    {% set title = "Houston, nous avons un problème!"|_ %}
                    {% set message = error %}
                {% else %}
                    {% set color = '' %}
                    {% set title = "Et hop, direction votre boite mail..."|_ %}
                    {% set message = wantedUser.displayName ~ ", le lien de réinitialisation vient d'être déposé dans votre boite mail. Ce lien a une durée de validité, ne trainez pas!"|_ %}
                {% endif %}

                <div class="tab-pane bg-white border-start border-bottom border-end p-3 show active" id="nav-passwordlost" role="tabpanel" aria-labelledby="nav-passwordlost-tab">
                    <p class="lead {{ color }}">
                        {{ title }}
                    </p>
                    <p class="small text-muted mb-4">
                        {{ message }}
                    </p>

                    <div class="d-flex flex-row gap-2 justify-content-between align-items-center mt-4">
                        <a class="btn btn-sm btn-outline-secondary" href="{{ route('home') }}" role="button">{{ "retour"|_ }}</a>
                    </div>
                </div>

            </div>
        </div>

    </main>

    {% include 'footer.html.twig' %}
{% endblock body %}