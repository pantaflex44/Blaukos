{% if env('APP_AUTH_USE_JS', true) %}
    <div class="modal " id="logoutModal" data-bs-backdrop="static" data-bs-keyboard="true" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-fullscreen-sm-down">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="logoutModalLabel"><i class="fas fa-exclamation-triangle text-danger me-2"></i>{{ "Important"|_ }}</h5>
            </div>
            <div class="modal-body">{{ "Êtes-vous certain de vouloir vous déconnecter de votre espace?"|_ }}</div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">{{ "Annuler"|_ }}</button>
                <button type="button" class="btn btn-sm btn-primary" onclick="window.location.href='/logout'">{{ "Valider"|_ }}</button>
            </div>
            </div>
        </div>
    </div>
{% endif %}